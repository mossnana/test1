<odoo>
  <data>
    <record model="ir.ui.view" id="ac_order_list">
      <field name="name">ac_order_list</field>
      <field name="model">ac_order.ac_order</field>
      <field name="arch" type="xml">
        <tree>
          <field name="ac_order_name"/>
          <field name="ac_order_customer"/>
          <field name="ac_date"/>
          <field name="ac_order_line">
            <tree>
                <field name='product'/>
            </tree>
          </field>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="ac_order_form">
      <field name="name">ac_order_form</field>
      <field name="model">ac_order.ac_order</field>
      <field name="arch" type="xml">
        <form class='o_sale_order'>
            <header>
                <button name="confirm_order" string='Confirm' type='object' class='btn-success' states="draft"/>
                <button name="to_draft_order" string='Edit' type='object' class='btn-warning' states="comfirm"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                <button name="action_view_sale" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                    <field name="sale_count" icon='fa-linux' widget="statinfo" string="Sales"/>
                </button>
                </div>
            <group>
              <field name="ac_order_name"/>
              <field name="ac_order_customer"/>
              <field name="ac_date"/>
              <field name="state"/>
            </group>
          <field name="ac_order_line">
            <tree editable="1">
                <field name='product'/>
                <field name='description'/>
                <field name='uom'/>
                <field name='unit_price'/>
                <field name='qty'/>
                <field name='discount'/>
                <field name='discount_amount'/>
                <field name='final_price' sum="Total Price"/>
            </tree>
            <form>
                <group>
                    <field name='product'/>
                    <field name='description'/>
                    <field name='uom'/>
                    <field name='unit_price'/>
                    <field name='qty'/>
                    <field name='discount'/>
                    <field name='discount_amount'/>
                    <field name='final_price'/>
                </group>
            </form>
          </field>
            </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="ac_order_action_window">
      <field name="name">AC Order</field>
      <field name="res_model">ac_order.ac_order</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="ac_order.action_server">
      <field name="name">ac_order_server</field>
      <field name="model_id" ref="model_ac_order_ac_order"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    <menuitem name="AC Order" id="ac_order_menu_root"/>
    <!-- menu categories -->
    <menuitem name="Order" id="ac_order_menu_1" parent="ac_order_menu_root"/>
    <!-- actions -->
    <menuitem name="AC Order" id="ac_order_menu_1_list" parent="ac_order_menu_1"
              action="ac_order_action_window"/>
  </data>
</odoo>
